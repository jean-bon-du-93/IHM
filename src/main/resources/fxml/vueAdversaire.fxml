<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<!-- Root changed to BorderPane -->
<fx:root type="javafx.scene.layout.BorderPane"
         stylesheets="@../css/style.css"
         styleClass="opponent-area"
         xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/11.0.1">

    <left>
        <VBox spacing="10" alignment="TOP_CENTER" styleClass="game-info-panel">
            <BorderPane.margin>
                <Insets right="10"/>
            </BorderPane.margin>
            <padding>
                <Insets top="10" bottom="10" left="5" right="5"/>
            </padding>
            <children>
                <Label text="Deck Adv.:" styleClass="text-14px-bold"/>
                <ImageView fx:id="deckAdversaireImageView" fitWidth="30" fitHeight="42" preserveRatio="true"/>
                <Label fx:id="deckAdversaireLabel" styleClass="text-12px"/>

                <Label text="Récomp. Adv.:" styleClass="text-14px-bold">
                    <VBox.margin><Insets top="10"/></VBox.margin>
                </Label>
                <ImageView fx:id="prixAdversaireImageView" fitWidth="30" fitHeight="42" preserveRatio="true"/>
                <Label fx:id="prixAdversaireLabel" styleClass="text-12px"/>

                <Label text="Main Adv. (Nb):" styleClass="text-14px-bold">
                    <VBox.margin><Insets top="10"/></VBox.margin>
                </Label>
                <Label fx:id="mainAdversaireLabel" styleClass="text-12px"/>

                <Label text="Défausse Adv.:" styleClass="text-14px-bold">
                    <VBox.margin><Insets top="10"/></VBox.margin>
                </Label>
                <Label fx:id="defausseAdversaireLabel" styleClass="text-12px"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="8" styleClass="opponent-main-content-area">
            <padding>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </padding>
            <children>
                <Label fx:id="nomAdversaireLabel" styleClass="text-18px-bold" alignment="CENTER" maxWidth="Infinity"/>

                <HBox spacing="20" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <VBox fx:id="opponentPokemonActifVBox" spacing="5" alignment="CENTER" HBox.hgrow="NEVER">
                        <children>
                            <Label text="Actif Adv.:" styleClass="text-14px-bold"/>
                            <Button fx:id="opponentPokemonActifButton" styleClass="card-button" onAction="#handleOpponentActivePokemonClick"/>
                            <HBox fx:id="energiePokemonActifAdversaireHBox" spacing="2" alignment="CENTER" minHeight="-Infinity"/>
                        </children>
                    </VBox>

                    <VBox spacing="5" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Banc Adv.:" styleClass="text-14px-bold"/>
                            <ScrollPane fitToWidth="true" vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" styleClass="bench-scroll-pane">
                                <HBox fx:id="bancAdversaireHBox" spacing="5" alignment="CENTER_LEFT" minHeight="90"/> <!-- Min height for bench cards -->
                            </ScrollPane>
                        </children>
                    </VBox>
                </HBox>

                <Label text="Main de l'adversaire (Cartes):" styleClass="text-14px-bold">
                     <VBox.margin><Insets top="5" bottom="2"/></VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true" vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" prefHeight="100" minHeight="70" VBox.vgrow="SOMETIMES">
                    <content>
                        <HBox fx:id="panneauMainAdversaireHBox" spacing="3" alignment="CENTER_LEFT"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</fx:root>
